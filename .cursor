{
    "name": "Real-Time Poker Platform",
    "folders": [
        {
            "name": "Documentation",
            "path": "docs"
        },
        {
            "name": "API Server",
            "path": "api"
        },
        {
            "name": "Game Server",
            "path": "game"
        },
        {
            "name": "Web Client",
            "path": "web"
        }
    ],
    "settings": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "files.exclude": {
            "**/.git": true,
            "**/.DS_Store": true,
            "**/node_modules": true,
            "**/dist": true,
            "**/build": true
        }
    },
    "tasks": {
        "dev:api": "cd api && go run cmd/api/main.go",
        "dev:game": "cd game && go run cmd/game/main.go",
        "dev:web": "cd web && npm run dev"
    },
    "recommendations": {
        "extensions": [
            "golang.go",
            "dbaeumer.vscode-eslint",
            "esbenp.prettier-vscode",
            "bradlc.vscode-tailwindcss"
        ]
    }
}